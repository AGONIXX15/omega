prefix=${pcfiledir}/../..
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
datarootdir=${prefix}/share
datadir=${datarootdir}
includedir=${prefix}/include

docdir=${datarootdir}/doc/cairomm-1.16
doxytagfile=${docdir}/reference/cairomm-1.16.tag
htmlrefdir=${docdir}/reference/html
htmlrefpub=http://www.cairographics.org/documentation/cairomm/reference

Name: cairomm
Description: C++ binding for the cairo graphics library
Version: 1.18.0
URL: http://www.cairographics.org/cairomm/

Libs: "-L${libdir}" -lcairomm-1.16
Requires: sigc++-3.0 >= 3.0.0 cairo >= 1.14.0
Cflags: "-I${includedir}"
